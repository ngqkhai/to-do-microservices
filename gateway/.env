# API Gateway Configuration
PORT=8080
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
# For production, use the public key from user-service
JWT_PUBLIC_KEY_PATH=src/config/public.pem

# DNS Configuration - Custom DNS Server
DNS_SERVER_HOST=127.0.0.1
DNS_SERVER_PORT=8600

# Logging
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Default service port (if DNS doesn't return port)
DEFAULT_SERVICE_PORT=3000 